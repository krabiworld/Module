<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>
        %d{HH:mm:ss} %boldCyan(%25.25thread) %red(%7.7X{jda.shard}) %boldGreen(%-20.-20logger{0}) %highlight(%5level) %msg%n
      </pattern>
    </encoder>
  </appender>

  <root level="info">
		<appender-ref ref="STDOUT" />
  </root>
</configuration>
