<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>
        %d{HH:mm} %boldCyan(%26.26thread) %red(%7.7X{jda.shard}) %boldGreen(%-16.-16logger{0}) %highlight(%5level) %msg%n
      </pattern>
    </encoder>
  </appender>

  <root level="info">
		<appender-ref ref="STDOUT" />
  </root>
</configuration>
