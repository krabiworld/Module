<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>
        %d{HH:mm} %boldCyan(%22.22thread) %boldGreen(%-16.-16logger{0}) %highlight(%5level) %msg%n
      </pattern>
    </encoder>
  </appender>

  <root level="info">
		<appender-ref ref="STDOUT" />
  </root>
</configuration>
